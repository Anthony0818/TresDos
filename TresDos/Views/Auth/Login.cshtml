@{
    ViewBag.Title = "Login";
    Layout = null; // No shared layout
}
@using TresDos.Application.DTOs
@using TresDos.Application.ViewModel
@model LoginModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Atocha</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        html, body {
            height: 100%;
        }
    </style>
</head>
<body class="bg-light d-flex justify-content-center align-items-center">

    <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
        <h3 class="text-center mb-4">Atocha</h3>

        <form asp-action="Login" method="post" novalidate>
            <h5>Login</h5>

            <div class="mb-3">
                <input asp-for="Username" placeholder="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Password" placeholder="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>

            <p class="text-danger">@ViewBag.Error</p>
        </form>
    </div>

    <!-- ✅ jQuery FIRST -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Bundle with Popper -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery Validation Scripts -->
   @*  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script> *@

</body>
</html>